@model IEnumerable<Ecommerce.Models.Cart>

@{
    ViewBag.Title = "MyCart";
}
<style>
    #customer_name{
        position:relative;
        left:100px;
    }
</style>
<h2>MyCart</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Customer_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <span id="customer_name">@Html.DisplayFor(modelItem => item.Customer.Customer_name)</span>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Cart_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Cart_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Cart_Id })
            </td>
        </tr>
    }

</table>
